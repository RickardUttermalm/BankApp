@model BankApp.WebUI.Models.RoleManagerBindingModel

@{
    ViewData["Title"] = "Byt roller";
}


<h4>Hantera roller</h4>
<hr />
@if (TempData["Status"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(TempData["Status"])
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><input type="checkbox" name="Regular" asp-for="Regular" />Vanlig </label>
                <label><input type="checkbox" name="Cashier" asp-for="Cashier" />Cashier </label>
                <label><input type="checkbox" name="Admin" asp-for="Admin" />Admin </label>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">Spara</button>
            </div>
        </form>
    </div>
</div>

