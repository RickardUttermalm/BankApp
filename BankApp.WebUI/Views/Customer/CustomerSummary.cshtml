
@{
    ViewData["Title"] = "Sök Kund";
}


    <div class="container">
        <div class="row">
            <form asp-action="CustomerSummary" asp-controller="Customer" method="post"
                   data-ajax="true"
                   data-ajax-method="POST"
                   data-ajax-mode="replace"
                   data-ajax-update="#customerdetail">
                <div class="form-group">
                    <label>Ange kundnummer:</label>
                    <input class="form-control" name="id" />
                    <button class="btn" type="submit">Sök</button>
                </div>
            </form>
        </div>
        
        <div class="row">
            <div id="customerdetail"></div>
        </div>
    </div>

