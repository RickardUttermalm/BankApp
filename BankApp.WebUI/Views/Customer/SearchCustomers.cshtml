
@model BankApp.Application.Customers.Queries.GetCustomersListQuery
@{
    ViewData["Title"] = "Sök Kund";
}


<div class="container">
    <div class="row">
        <form asp-action="SearchCustomers" asp-controller="Customer" method="post"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#customerlist">
            <div class="form-group">
                <label>Sök på namn:</label>
                <input class="form-control" name="name" asp-for="@Model.Name"/>
                <label>Sök på stad:</label>
                <input class="form-control" name="city" asp-for="@Model.City"/>
                <button class="btn" type="submit">Sök</button>
            </div>
        </form>
    </div>

    <div class="row">
        <div id="customerlist"></div>
    </div>
</div>
